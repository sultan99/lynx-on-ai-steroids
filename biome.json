{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "includes": [
      "**/*.js",
      "**/*.jsx",
      "**/*.ts",
      "**/*.tsx",
      "**/*.css",
      "**/*.graphql",
      "**/*.json",
      "!**/.github/workflows",
      "!**/build",
      "!**/coverage",
      "!**/dist",
      "!**/.npm",
      "!**/.git",
      "!**/.turbo",
      "!**/.idea",
      "!**/.next",
      "!**/.log",
      "!**/node_modules",
      "!**/*.d.ts",
      "!**/_generated-*.ts",
      "!**/*.gen.ts",
      "!**/.yalc",
      "!**/testing/**/*",
      "!**/gql/**/*",
      "!**/playwright-report",
      "!**/test-results",
      "!**/monocart-report"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80,
    "lineEnding": "lf",
    "includes": ["**", "!**/gql/**"]
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [{ "type": true }]
          }
        },
        "useSortedProperties": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useEnumInitializers": "off",
        "useDefaultSwitchClause": "error",
        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "requireAscii": true,
            "strictCase": false,
            "filenameCases": ["kebab-case"]
          }
        },
        "useImportType": {
          "level": "on",
          "options": {
            "style": "separatedType"
          }
        }
      },
      "correctness": {
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn"
      }
    },
    "includes": ["**", "!**/gql/**"]
  },
  "javascript": {
    "jsxRuntime": "reactClassic",
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "all"
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentWidth": 2,
      "indentStyle": "space",
      "quoteStyle": "single"
    }
  }
}
